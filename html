<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Element Selectors Example</title>
</head>
<body>
  <h1 id="main-title">Welcome to My Page</h1>
  <p class="intro">This is an introduction paragraph.</p>
  <p class="intro highlight">This paragraph has two classes.</p>
  <div>
    <p>Paragraph inside a div.</p>
  </div>
  <ul>
    <li>List item 1</li>
    <li class="highlight">List item 2</li>
  </ul>

  <script>
    // Select by ID
    const title = document.getElementById('main-title');
    console.log('By ID:', title);

    // Select by class name (returns HTMLCollection)
    const introParagraphs = document.getElementsByClassName('intro');
    console.log('By class name:', introParagraphs);

    // Select by tag name (returns HTMLCollection)
    const allParagraphs = document.getElementsByTagName('p');
    console.log('By tag name:', allParagraphs);

    // Select single element using querySelector (CSS selector)
    const firstHighlight = document.querySelector('.highlight');
    console.log('First .highlight element:', firstHighlight);

    // Select all elements matching a selector using querySelectorAll (returns NodeList)
    const allHighlights = document.querySelectorAll('.highlight');
    console.log('All .highlight elements:', allHighlights);

    // Example of using the selected elements
    title.style.color = 'blue'; // change color of title

    // Change background color of all paragraphs with class "intro"
    for (let p of introParagraphs) {
      p.style.backgroundColor = '#f0f0f0';
    }
  </script>
</body>
</html>
